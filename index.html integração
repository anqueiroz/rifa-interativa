  <script>
    const grid = document.getElementById("numberGrid");
    const whatsappBtn = document.getElementById("whatsappBtn");
    let selectedNumber = null;

    // Gera os 200 nÃºmeros
    for (let i = 1; i <= 200; i++) {
      const div = document.createElement("div");
      div.className = "number";
      div.textContent = i.toString().padStart(3, '0');
      div.addEventListener("click", function () {
        if (selectedNumber) {
          selectedNumber.classList.remove("selected");
        }
        selectedNumber = div;
        div.classList.add("selected");
        whatsappBtn.disabled = false;
      });
      grid.appendChild(div);
    }

    // AÃ§Ã£o do botÃ£o do WhatsApp
    whatsappBtn.addEventListener("click", function () {
      if (selectedNumber) {
        const number = selectedNumber.textContent;
        const mensagem = `OlÃ¡! Gostaria de confirmar minha participaÃ§Ã£o na Rifa SolidÃ¡ria com o nÃºmero ${number}.`;
        const phone = "11945758028";
        const url = `https://wa.me/${phone}?text=${encodeURIComponent(mensagem)}`;
        window.open(url, "_blank");
      }
    });
  </script>
